@model sistemaWEB.Models.ReservaHotel

@{
    ViewData["Title"] = "Delete mis reservas hotel";
}

<div class="row">

    <div class="col-md-12" style="background-color:#B4E7D8; width:90%; height:95%; border-radius:10px;  align-content:center; margin: 20px;">

        <h1>Delete mis reservas hotel</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>ReservaHotel</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.miHotel.costo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.miHotel.costo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.cantidadPersonas)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cantidadPersonas)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fechaDesde)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fechaDesde)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.fechaHasta)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.fechaHasta)
                </dd>
            </dl>

            <br />

            <form asp-action="MisReservasHotelDelete">
                <input type="hidden" asp-for="idReservaHotel" />
                <input type="hidden" name="costo" value="@Model.miHotel.costo" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="MisReservasHotel">Back to List</a>
            </form>
        </div>

    </div>

</div>
