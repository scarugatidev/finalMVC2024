@model IEnumerable<sistemaWEB.Models.Vuelo>

@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <div class="col-md-12" style="background-color:#B4E7D8; width:90%; height:95%; border-radius:10px;  align-content:center; margin: 20px;">

        <h5>Mis vuelos en cual viaje</h5>


        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.origen)
                    </th scope="col">
                    <th>
                        @Html.DisplayNameFor(model => model.destino)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.capacidad)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.vendido)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.costo)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.fecha)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.aerolinea)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.avion)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row">
                        <td>
                            @Html.DisplayFor(modelItem => item.origen.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.destino.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.capacidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vendido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.costo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.aerolinea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.avion)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>

<div>
    <a asp-action="Index" asp-controller="Menu">Back to List</a>
</div>