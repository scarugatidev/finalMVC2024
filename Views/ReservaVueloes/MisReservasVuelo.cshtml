@model IEnumerable<sistemaWEB.Models.ReservaVuelo>

@{
    ViewData["Title"] = "Mis reservas vuelo";
}


<div class="row">

    <div class="col-md-12" style="background-color:#B4E7D8; width:90%; height:95%; border-radius:10px;  align-content:center; margin: 20px;">


        <h5>ReservaVuelo</h5>
        <hr />

        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayName("id")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("miVuelo.id")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("origen_nombre")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("destino_nombre")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("pagado")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("Fecha")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("aerolinea")
                        </th>
                        <th scope="col">
                            @Html.DisplayName("avion")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr scope="row">
                            <td>
                                @Html.DisplayFor(modelItem => item.idReservaVuelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.origen.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.destino.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.pagado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.aerolinea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.miVuelo.avion)
                            </td>
                            <td>
                                <a asp-action="EditMiReservaVuelo" asp-route-id="@item.idReservaVuelo">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.idReservaVuelo">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Menu">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}